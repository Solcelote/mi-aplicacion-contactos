{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "nixpacks": {
      "providers": {
        "node": {
          "version": "20"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start"
  }
}